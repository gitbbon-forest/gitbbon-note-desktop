{
  "name": "gitbbon-search",
  "displayName": "Gitbbon Search",
  "description": "Semantic Search for Gitbbon Notes using E5-Small + Orama",
  "version": "0.1.0",
  "publisher": "gitbbon",
  "license": "MIT",
  "type": "module",
  "engines": {
    "vscode": "^1.70.0"
  },
  "enabledApiProposals": [
    "aiTextSearchProvider",
    "textSearchProvider2"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:gitbbon-search.searchView",
    "workspaceContains:**/*.md"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "gitbbon-search.reindex",
        "title": "Reindex Workspace",
        "category": "Gitbbon Search"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:modelHost && tsc -p ./ && npm run copy:wasm",
    "package": "npm run compile",
    "watch": "tsc -watch -p ./ & vite build --watch",
    "watch:tsc": "tsc -watch -p ./",
    "build:modelHost": "vite build",
    "copy:wasm": "mkdir -p out/webview/assets && cp node_modules/@huggingface/transformers/dist/ort-wasm-simd-threaded.jsep.* out/webview/assets/"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@orama/orama": "^3.1.18"
  }
}
