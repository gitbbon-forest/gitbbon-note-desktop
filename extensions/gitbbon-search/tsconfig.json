{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "vscode": ["../../src/vscode-dts/vscode.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/webview/**/*", "src/modelHost.ts"]
}
