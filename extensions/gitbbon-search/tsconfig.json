{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "vscode": [
        "../../src/vscode-dts/vscode.d.ts",
        "../../src/vscode-dts/vscode.proposed.aiTextSearchProvider.d.ts",
        "../../src/vscode-dts/vscode.proposed.textSearchProvider2.d.ts"
      ]
    },
    "types": ["@webgpu/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/webview/**/*"]
}
