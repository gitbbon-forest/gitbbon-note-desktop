{
  "name": "gitbbon-chat",
  "displayName": "Gitbbon Chat",
  "description": "AI Chat for Gitbbon Notes",
  "version": "0.1.0",
  "publisher": "gitbbon",
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "enabledApiProposals": [
    "findTextInFiles"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "gitbbon-chat-sidebar",
          "title": "Gitbbon Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "gitbbon-chat-sidebar": [
        {
          "id": "gitbbon.chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "gitbbon.chat.open",
        "title": "Open Gitbbon Chat",
        "category": "Gitbbon"
      },
      {
        "command": "gitbbon.chat.sendText",
        "title": "AI에게 물어보기",
        "category": "Gitbbon",
        "icon": "$(sparkle)"
      }
    ],
    "keybindings": [
      {
        "command": "gitbbon.chat.sendText",
        "key": "ctrl+l",
        "mac": "cmd+l",
        "when": "editorTextFocus && editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:webview && tsc -p ./",
    "package": "npm run compile",
    "watch": "tsc -watch -p ./ & vite build --watch",
    "watch:tsc": "tsc -watch -p ./",
    "watch:webview": "vite build --watch",
    "build:webview": "vite build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.70.0",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.56",
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/react": "^2.0.118",
    "ai": "^6.0.3",
    "deep-chat": "^2.3.0",
    "dotenv": "^17.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.2.1"
  }
}
